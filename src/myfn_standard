#!/bin/bash

############################################################
#
#       000 - 全局变量
#
############################################################
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
MYFN_LIST=""


############################################################
#
#       001 - 显示高亮颜色
#
#       echo_color  "信息"  "颜色"
#
############################################################
echo_color()
{
        echo -e "\e[1m\e[40;${2}m${1}\e[0m"
}


############################################################
#
#       002 - 显示高亮颜色不换行
#
#       echo_line  "信息"  "颜色"
#
############################################################
echo_line()
{
        echo -n "$(echo_color "$1" "$2")"
}


############################################################
#
#       003 - 显示成功的提示
#
#       echo_success  "信息"
#
############################################################
echo_success()
{
        echo_color "$1" "32"
}


############################################################
#
#       004 - 显示错误的提示
#
#       echo_error  "信息"
#
############################################################
echo_error()
{
        echo_color "$1" "31"
        exit 1
}


############################################################
#
#       005 - 显示警告的提示
#
#       echo_warning  "信息"
#
############################################################
echo_warning()
{
        echo_color "$1" "33"
        sleep 3
}


############################################################
#
#       006 - 显示成功的提示不换行
#
#       display_success  "信息"
#
############################################################
display_success()
{
        echo_line "Success: " "32"
        echo "$1"
}


############################################################
#
#       007 - 检查用户是否为 root
#
#       
#
############################################################
check_root()
{
        if [[ "$(id -u)" != "0" ]]; then
                echo_error "Error: must run with root"
        fi
}










############################################################
#
#       999 - 导入函数
#
############################################################
if [[ -n "$MYFN_LIST" ]]; then
        
        for MYFN_FILE in ${MYFN_LIST}; do
                
                MYFN_PATH="/usr/local/bin/${MYFN_FILE}"
                
                if [[ -s "$MYFN_PATH" ]]; then
                        . ${MYFN_PATH}
                else
                        echo_error "Error: ${MYFN_PATH} not found"
                fi
                
        done
        
fi
